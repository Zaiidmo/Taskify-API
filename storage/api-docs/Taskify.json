{
	"swagger": "2.0",
	"info": {
	  "title": "Taskify",
	  "version": "1.0.0"
	},
	"tags": [
	  {
		"name": "Auth",
		"description": "Authentication Endpoints"
	  },
	  {
		"name": "Tasks",
		"description": "Task Management Endpoints"
	  }
	],
	"schemes": [
	  "http"
	],
	"basePath": "/api",
	"paths": {
	  "/register": {
		"post": {
		  "tags": [
			"Auth"
		  ],
		  "summary": "Register",
		  "description": "This endpoint is used to register a user. Upon successful execution, it returns a JSON response containing a message and user details including name, email, creation and update timestamps, and user ID.",
		  "consumes": [
			"application/json"
		  ],
		  "produces": [
			"application/json"
		  ],
		  "parameters": [
			{
			  "name": "body",
			  "in": "body",
			  "description": "User registration details",
			  "required": true,
			  "schema": {
				"type": "object",
				"properties": {
				  "name": {
					"type": "string",
					"example": "John Doe"
				  },
				  "email": {
					"type": "string",
					"example": "johndoe@example.com"
				  },
				  "password": {
					"type": "string",
					"example": "password"
				  }
				}
			  }
			}
		  ],
		  "responses": {}
		}
	  },
	  "/login": {
		"post": {
		  "tags": [
			"Auth"
		  ],
		  "summary": "Login",
		  "description": "This API endpoint is used to authenticate and login a user.",
		  "consumes": [
			"application/x-www-form-urlencoded"
		  ],
		  "produces": [
			"application/json"
		  ],
		  "parameters": [
			{
			  "name": "email",
			  "in": "formData",
			  "description": "The email address of the user.",
			  "required": true,
			  "type": "string",
			  "example": "johndoe@example.com"
			},
			{
			  "name": "password",
			  "in": "formData",
			  "description": "The password of the user.",
			  "required": true,
			  "type": "string",
			  "example": "password"
			}
		  ],
		  "responses": {}
		}
	  },
	  "/logout": {
		"post": {
		  "tags": [
			"Auth"
		  ],
		  "summary": "Logout",
		  "description": "This endpoint is used to log out the user from the system.",
		  "responses": {}
		}
	  },
	  "/refresh": {
		"post": {
		  "tags": [
			"Auth"
		  ],
		  "summary": "Refresh",
		  "description": "This endpoint is used to refresh the authentication token.",
		  "responses": {}
		}
	  },
	  "/tasks": {
		"post": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Create a Task",
		  "responses": {}
		},
		"get": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Display My Tasks",
		  "description": "This endpoint sends an HTTP GET request to retrieve a list of tasks from the specified API.",
		  "responses": {}
		}
	  },
	  "/tasks/{id}": {
		"put": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Update My Task",
		  "responses": {}
		},
		"delete": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Delete My Task",
		  "responses": {}
		}
	  },
	  "/tasks/{id}/done": {
		"put": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Make It Done",
		  "responses": {}
		}
	  },
	  "/tasks/{id}/doing": {
		"put": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Make it Doing",
		  "responses": {}
		}
	  },
	  "/tasks/{id}/todo": {
		"put": {
		  "tags": [
			"Tasks"
		  ],
		  "summary": "Make it To Do",
		  "responses": {}
		}
	  }
